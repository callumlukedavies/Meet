<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".view.viewevent.ViewEventMainFragment">

    <LinearLayout
        android:id="@+id/chatButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="40dp"
        android:visibility="visible"
        >

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/view_chat_title_string"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="normal"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewEventChatButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/main_button_white"
            android:text="@string/view_chat_button_string"
            android:textAllCaps="false"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/invitedButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/whos_invited_string"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="normal"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewEventInvitedListButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/main_button_white"
            android:text="@string/view_list_button_string"
            android:textAllCaps="false"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/attendingButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invitedButtonLayout"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/whos_going_string"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="normal"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewEventAttendingListButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/main_button_white"
            android:text="@string/view_list_button_string"
            android:textAllCaps="false"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mapButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatButtonLayout"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        >

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/view_map_title_string"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="normal"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewEventMapButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/main_button_white"
            android:text="@string/view_map_button_string"
            android:textAllCaps="false"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/respondButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/attendingButtonLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewEventRejectButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/reject_button_string"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:background="@drawable/main_button_white"
            android:layout_marginEnd="5dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewEventAcceptButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/accept_button_string"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:background="@drawable/main_button_pink"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>