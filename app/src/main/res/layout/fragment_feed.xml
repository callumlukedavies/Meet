<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.feed.FeedFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feed_title_string"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="20dp"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feedInvitationRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    </androidx.recyclerview.widget.RecyclerView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/feedCreateEventButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/create_event_button_string"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/main_button_pink"
        android:layout_margin="20dp"
        />

</LinearLayout>